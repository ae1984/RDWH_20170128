CREATE MATERIALIZED VIEW U1.M_HARD_COL_ASSET
BUILD DEFERRED
REFRESH FORCE ON DEMAND
AS
SELECT "ASSET"."ID" "ID","ASSET"."CREATEDDATE" "CREATEDDATE","ASSET"."MODIFIEDDATE" "MODIFIEDDATE","ASSET"."DESCRIPTION" "DESCRIPTION","ASSET"."AUTHOR_ID" "AUTHOR_ID","ASSET"."MODIFIEDBY_ID" "MODIFIEDBY_ID","ASSET"."CATEGORY_ID" "CATEGORY_ID","ASSET"."REGISTRATIONADDRESS_ID" "REGISTRATIONADDRESS_ID","ASSET"."ZALOGDESC" "ZALOGDESC" FROM "DEBTCOLL"."ASSET"@"HCOL" "ASSET";
grant select on U1.M_HARD_COL_ASSET to LOADDB;


