  c_producer     VARCHAR2(100 CHAR),
  c_model        VARCHAR2(100 CHAR),
  c_price        NUMBER(17,2),
  c_quant        NUMBER(4),
  c_cost         NUMBER(17,2),
  class_id       VARCHAR2(16 CHAR),
  c_type_tov     NUMBER,
  c_bill_number  VARCHAR2(50 CHAR),
  c_bill_summ    NUMBER(17,2),
  c_bill_date    DATE,
  c_name_ref     NUMBER,
  c_act_prod     NUMBER,
  sn             NUMBER,
  su             NUMBER,
  c_kas_prod_com NUMBER
)
