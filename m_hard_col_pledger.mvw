CREATE MATERIALIZED VIEW U1.M_HARD_COL_PLEDGER
BUILD DEFERRED
REFRESH FORCE ON DEMAND
AS
SELECT "PLEDGER"."ID" "ID","PLEDGER"."ADDRESS" "ADDRESS","PLEDGER"."CONTACTS" "CONTACTS","PLEDGER"."DEPEND" "DEPEND","PLEDGER"."NAME" "NAME","PLEDGER"."TYPE" "TYPE","PLEDGER"."COLLATERAL_ID" "COLLATERAL_ID" FROM "DEBTCOLL"."PLEDGER"@"HCOL" "PLEDGER";
grant select on U1.M_HARD_COL_PLEDGER to LOADDB;


