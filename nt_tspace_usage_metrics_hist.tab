create table U1.NT_TSPACE_USAGE_METRICS_HIST
(
  sdt             DATE,
  tablespace_name VARCHAR2(30),
  used_space      NUMBER,
  tablespace_size NUMBER,
  used_percent    NUMBER
)
tablespace USERS_ARC
  pctfree 0
  initrans 1
  maxtrans 255
  storage
  (
    initial 64K
    next 1M
    minextents 1
    maxextents unlimited
  )
compress
nologging;
grant select on U1.NT_TSPACE_USAGE_METRICS_HIST to LOADDB;

