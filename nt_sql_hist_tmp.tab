create table U1.NT_SQL_HIST_TMP
(
  sdt              DATE,
  schema           VARCHAR2(30),
  sql_id           VARCHAR2(13),
  sql_text         VARCHAR2(1000),
  sql_fulltext     CLOB,
  module           VARCHAR2(64),
  action           VARCHAR2(64),
  last_active_time DATE
)
tablespace USERS_ARC
  pctfree 0
  initrans 1
  maxtrans 255
  storage
  (
    initial 64K
    next 1M
    minextents 1
    maxextents unlimited
  )
compress
nologging;
grant select on U1.NT_SQL_HIST_TMP to LOADDB;

