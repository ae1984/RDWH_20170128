  select f.product_type, f.cr_program_name as product, trunc(f.folder_date_create_mi) as a_date,
--         case when f.is_categ_a = 1 then 'КАТЕГОРИЯ А' when f.is_categ_a = 0 then 'НЕ КАТЕГОРИЯ А' end as is_categ_a,
