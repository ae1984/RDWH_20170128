  where f.process_name != 'ОНЛАЙН КРЕДИТ' and
        f.folder_date_create_mi >= to_date('2012-07-01','yyyy-mm-dd') and
        f.folder_date_create_mi < to_date('2015-01-01','yyyy-mm-dd')
) f
