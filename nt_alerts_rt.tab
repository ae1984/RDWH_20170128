create table U1.NT_ALERTS_RT
(
  sdt        DATE,
  alert_name VARCHAR2(200),
  alert_desc VARCHAR2(1000),
  status     VARCHAR2(20)
)
tablespace USERS_F
  pctfree 0
  initrans 1
  maxtrans 255
  storage
  (
    initial 64K
    next 1M
    minextents 1
    maxextents unlimited
  )
compress
nologging;
grant select on U1.NT_ALERTS_RT to LOADDB;

